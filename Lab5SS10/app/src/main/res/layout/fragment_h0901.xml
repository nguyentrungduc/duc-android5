<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.duc.lab5ss10.H0901Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="Switches"
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="17sp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:text="Flashlight"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Switch
                    android:padding="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="#000000"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:text="Wifi"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Switch
                    android:padding="15dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:text="Radio Button"
                android:layout_weight="2.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <RadioGroup
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RadioButton
                    android:buttonTint="@color/color2"
                    android:text="If this is turned on"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:buttonTint="@color/color2"
                    android:text="This one must be turned off"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="30dp"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:text="Volume Slider"
                android:layout_weight="0.75"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:textColor="#000000"
                android:textSize="19sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="If this is turned on"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <SeekBar
                android:progressTint="@color/color2"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>


</FrameLayout>
