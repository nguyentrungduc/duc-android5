<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.duc.bmi.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/edw"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edh"
        android:layout_below="@+id/edw"
        android:layout_alignLeft="@+id/edw"
        android:layout_alignStart="@+id/edw"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight"
        android:id="@+id/tvweight"
        android:layout_alignTop="@+id/edw"
        android:layout_toLeftOf="@+id/edw"
        android:layout_toStartOf="@+id/edw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Height"
        android:id="@+id/tvheight"
        android:layout_alignTop="@+id/edh"
        android:layout_toLeftOf="@+id/edh"
        android:layout_toStartOf="@+id/edh" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="kg"
        android:id="@+id/textView"
        android:layout_above="@+id/edh"
        android:layout_toRightOf="@+id/edw"
        android:layout_toEndOf="@+id/edw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="cm"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/edh"
        android:layout_toRightOf="@+id/edh"
        android:layout_toEndOf="@+id/edh" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:id="@+id/btbmi"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvresult"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/btbmi"
        android:layout_alignRight="@+id/btbmi"
        android:layout_alignEnd="@+id/btbmi" />

</RelativeLayout>
